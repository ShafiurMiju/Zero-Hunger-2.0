<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BD NGO</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <nav class="bg-gray-800 text-white">
        <div class="container m-auto py-4 flex justify-between items-center">
            <div class="text-2xl">BD NGO</div>
            <div class="flex gap-5">
                <a href="/restaurant/index" class="text-blue-400">Pending Request</a>
                <a href="/restaurant/createrequest">Add Request</a>
                <a href="/restaurant/fooditems">Food Items</a>
            </div>
            <div class="flex gap-5">
                <form action="@Url.Action("Logout", "Home")" method="post">
                    <button type="submit" class="btn btn-link">Logout</button>
                </form>
            </div>
        </div>
    </nav>

    <section class="container  m-auto mb-10">
        @RenderBody()
    </section>

    <footer class="bg-gray-800 text-white mt-5">
        <div class="container m-auto">
            <div class="py-4">
                Made by Md. Shafiur Rahman
            </div>
        </div>
    </footer>
</body>
</html>