
@{
    ViewBag.Title = "addEmployee";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="flex pt-3 items-start justify-center">
    <div class="w-[50%] flex justify-center flex-col">
        <h3 class="text-center text-xl text-green-500 mb-5 font-bold">Add Employee</h3>

        <form class="flex flex-col gap-5 justify-center items-center" method="post" action="">
            <input class="w-[70%] py-4 border-[2px] rounded text-center" type="text" name="Name" value="@(Model == null? "": Model.Name)" placeholder="Enter Employee Name" />
            <span class="text-red-400">@Html.ValidationMessage("Name")</span>
            <input class="w-[70%] py-4 border-[2px] rounded text-center" type="text" name="Email" value="@(Model == null? "": Model.Email)" placeholder="Enter Email Address" />
            <span class="text-red-400">@Html.ValidationMessage("Email")</span>

            <div class="flex gap-5">
                <div>
                    <input type="radio" name="Gender" value="Male" @(Model != null && Model.Gender == "Male" ? "checked" : "") /><span class="text-gray-500">Male</span>
                </div>
                <div>
                    <input type="radio" name="Gender" value="Female" @(Model != null && Model.Gender == "Female" ? "checked" : "") /><span class="text-gray-500">Female</span>
                </div>
            </div>
            <span class="text-red-400">@Html.ValidationMessage("Gender")</span>

            <input class="w-[70%] py-4 border-[2px] rounded text-center" type="text" name="ContactNumber" value="@(Model == null? "": Model.ContactNumber)" placeholder="Enter Contact Number" />
            <span class="text-red-400">@Html.ValidationMessage("ContactNumber")</span>
            <input class="w-[70%] py-4 border-[2px] rounded text-center" type="text" name="Address" value="@(Model == null? "": Model.Address)" placeholder="Enter Address" />
            <span class="text-red-400">@Html.ValidationMessage("Address")</span>
            <input class="w-[70%] py-4 border-[2px] rounded text-center" type="text" name="Password" value="@(Model == null? "": Model.Password)" placeholder="Password" />
            <span class="text-red-400">@Html.ValidationMessage("Password")</span>
            <input class="bg-green-400 px-10 rounded py-3 cursor-pointer" type="submit" value="Add" />
        </form>
    </div>
</div>


